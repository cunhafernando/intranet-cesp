<div class="wrapper">
	<%= render 'welcome/layout/side_bar' %>

	<div class="main">
		<%= render 'welcome/layout/nav' %>

		<main class="content">
			<div class="container-fluid p-0">
				<% flash.each do |key, message| %>
				<div class="alert <%= flash_class(key) %> alert-dismissible fade show text-center" role="alert">
					<%= message %>
					<button type="button" class="btn-close" data-dismiss="alert" aria-label="Close">
					<span aria-hidden="true"></span>
					</button>
				</div>
				<% end %>

				<div class="mb-3">
					<h1 class="h1 d-inline align-middle">UPA Indicadores SES</h1>
				</div>
				<div class="row">
					<h3>Nova lista UPA Indicadores SES</h3>
					<div class="row align-items-center mt-5 mb-5">
						<div class="col-6">
						<h3>Limpar lista UPA Indicadores SES</h3>
						<p class="text-secondary">Antes de importar a lista você deverá limpar a lista existente.</p>
                <%= link_to "Limpar lista", remove_all_upa_indicadores_ses_path, :method => :get, class: "btn btn-danger" %>
						</div>
						<div class="col-6">
							<h3>Importar lista</h3>
							<p class="text-secondary">Para exportar a planilha, você deverá acessar o TI Med - UPA, em seguida clicar na aba relatórios <strong>-></strong> INDICADORES <strong>-></strong> Indicadores Mensais SES <strong>-></strong> em Competência selecionar a data atual <strong>-></strong> clicar em "APLICAR" <strong>-></strong> exportar Excel.</p>
							<%= form_tag import_upa_indicadores_ses_path, multipart: true do %>
                <%= file_field_tag :file %>
                <%= submit_tag "Importar", :class=> "btn btn-success" %>
              <% end %>
						</div>
					</div>
				<div>
				<table class="table table-hover my-0">
          <thead>
            <tr>
              <th class="d-none d-xl-table-cell">Código</th>
              <th class="d-none d-xl-table-cell">Indicador</th>
              <th class="d-none d-xl-table-cell">Meta</th>
              <th class="d-none d-xl-table-cell">Variável</th>
              <th class="d-none d-xl-table-cell">Descrição</th>
              <th class="d-none d-xl-table-cell">Medida</th>
              <th class="d-none d-xl-table-cell">Status</th>
            </tr>
          </thead>

          <tbody>
          <% @upa_indicadores_ses.each do |upa_indicadores_se| %>
              <tr>
                <td class="d-none d-xl-table-cell"><%= upa_indicadores_se.codigo %></td>
                <td class="d-none d-xl-table-cell"><%= upa_indicadores_se.indicador %></td>
                <td class="d-none d-xl-table-cell"><%= upa_indicadores_se.meta %></td>
                <td class="d-none d-xl-table-cell"><%= upa_indicadores_se.variavel %></td>
                <td class="d-none d-xl-table-cell"><%= upa_indicadores_se.descricao %></td>
                <td class="d-none d-xl-table-cell"><%= upa_indicadores_se.medida %></td>
                <td class="d-none d-xl-table-cell"><%= upa_indicadores_se.status %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
				<br>
			<div>
				
			</div>
		</main>
		<%= render 'welcome/layout/footer' %>
	</div>
</div>
