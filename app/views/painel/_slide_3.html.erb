<main class="content">
    <div class="container-fluid p-0">
        <div class="row justify-content-between">
			<div class="col-12 col-lg-3">
				<div class="mb-0">
					<h1 class="h3 d-inline align-middle"><%= image_tag("logos/logo_upa_penha.jpg", :alt => "rss feed", :width => "70") %></h1>
