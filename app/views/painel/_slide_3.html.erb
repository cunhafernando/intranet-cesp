                            <%= render 'painel/cards/taxa_ocupacao/taxa_de_ocupacao_cti_3' %> 
                        </div>
                        <div class="col-sm-6">
                            <%= render 'painel/cards/taxa_ocupacao/taxa_de_ocupacao_cti_4' %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>


