<p id="notice"><%= notice %></p>

<h1>Consolidados</h1>
<%= link_to "Nova lista Censo Consolidado", new_consolidado_path, :class=> "btn btn-success" %>

<table class="table table-hover my-0">
  <thead>
    <tr>
      <th>Risco</th>
      <th>Tipo Entrada</th>
      <th>Profissional</th>
      <th>Especialidade</th>
      <th>Linha de Cuidado</th>
      <th>Boletim</th>
      <th>Entrada</th>
      <th>Classificação</th>
      <th>Encaminhamento</th>
      <th>Atendimento (primeira chamada)</th>
      <th>Início Atendimento</th>
      <th>Alta</th>
      <th>Nome</th>
      <th>Idade</th>
      <th>Sexo</th>
      <th>Raça</th>
      <th>TM Atend.</th>      
      <th>TM CR</th>
      <th>TM ClassxAtend</th>
      <th>Meta</th>
      <th>Cod.Diagnóstico</th>
      <th>Diagnóstico</th>
      <th>Tipo de Problema</th>
      <th>Motivo de Alta</th>
      <th>Bairro</th>
      <th>Município</th>
      <th>Convênio</th>
      <th>Número Sisreg</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <% @pacientes.each do |paciente| %>
      <tr>
        <td><%= paciente.risco %></td>
        <td><%= paciente.tipo_entrada %></td>
        <td><%= paciente.profissional %></td>
        <td><%= paciente.especialidade %></td>
        <td><%= paciente.linha_cuidado %></td>
        <td><%= paciente.boletim %></td>
        <td><%= paciente.entrada %></td>
        <td><%= paciente.classificacao %></td>
        <td><%= paciente.encaminhamento %></td>
        <td><%= paciente.atendimento_primeira %></td>
        <td><%= paciente.inicio_atendimento %></td>
        <td><%= paciente.fim_atendimento %></td>
        <td><%= paciente.alta %></td>
        <td><%= paciente.nome %></td>
        <td><%= paciente.idade %></td>
        <td><%= paciente.sexo %></td>
        <td><%= paciente.raca %></td>
        <td><%= paciente.tm_atendimento %></td>
        <td><%= paciente.tm_cr %></td>
        <td><%= paciente.tm_classxatend %></td>
        <td><%= paciente.meta %></td>
        <td><%= paciente.cod_diag %></td>
        <td><%= paciente.diagnostico %></td>
        <td><%= paciente.tipo_problema %></td>
        <td><%= paciente.motivo_alta %></td>
        <td><%= paciente.bairro %></td>
        <td><%= paciente.municipio %></td>
        <td><%= paciente.convenio %></td>
        <td><%= paciente.numero_sisreg %></td>
        <td><%= link_to 'Mostrar', paciente, class: "btn btn-success" %></td>
        <td><%= link_to 'Editar', edit_paciente_path(paciente), class: "btn btn-warning" %></td>
        <td><%= link_to 'Apagar', paciente, method: :delete, data: { confirm: 'Você está certo disso?' }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
