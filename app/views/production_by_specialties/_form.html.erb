<%= form_with(model: production_by_specialty) do |form| %>
  <% if production_by_specialty.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(production_by_specialty.errors.count, "error") %> proibiu que este production_by_specialty fosse salvo:</h2>

      <ul>
        <% production_by_specialty.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row justify-content-center">
    <div class="col-3">
      <%= form.label :specialty, style: "display: block", class: "form-label" %>
      <%= form.text_field :specialty, class: "form-label" %>
    </div>

    <div class="col-3">
      <%= form.label :foreseen, style: "display: block", class: "form-label" %>
      <%= form.text_field :foreseen, class: "form-label" %>
    </div>

    <div class="col-3">
      <%= form.label :accomplished, style: "display: block", class: "form-label" %>
      <%= form.text_field :accomplished, class: "form-label" %>
    </div>

    <div class="col-3">
      <%= form.label :performed_per_cent, style: "display: block", class: "form-label" %>
      <%= form.text_field :performed_per_cent, class: "form-label" %>
    </div>

    <div>
      <%= form.submit class: 'btn btn-success' %>
    </div>
  </div>
<% end %>
