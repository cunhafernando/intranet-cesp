<h1>Nova lista de tomografia computadorizada</h1>

<div class="row align-items-center mt-5 mb-5">
    <div class="col-6">
    <h3>Importar lista</h3>
      <%= form_tag import_computed_tomographies_path, multipart: true do %>
        <%= file_field_tag :file %>
        <%= submit_tag "Importar", :class=> "btn btn-success" %>
      <% end %>
    </div>
    <div class="col-6">
      <h3>Limpar lista de ramais</h3>
      <%= link_to "Limpar lista", remove_all_computed_tomographies_path, :method => :get, class: "btn btn-danger" %>
    </div>
  </div>
<div>

<%= render "form", computed_tomography: @computed_tomography %>

<br>

<div>
  <%= link_to "Voltar", computed_tomographies_path, class: "btn btn-warning" %>
</div>

